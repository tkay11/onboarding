
= form_for @poll do |f|
  - if @poll.errors.any?
    #error_explanation
      %h2= "#{pluralize(@poll.errors.count, "error")} prohibited this poll from being saved:"
      %ul
        - @poll.errors.full_messages.each do |msg|
          %li= msg

  .panel.panel--padding
    .field
      = f.label :title, class: "uk-legend"
      = f.text_field :title, class: "uk-input"

    .field
      = f.label :description, class: "uk-description"
      = f.text_area :description, class: "uk-textarea"

  .actions
    = f.submit 'Save', class: 'uk-button'
